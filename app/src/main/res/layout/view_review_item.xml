<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

        <ImageView
            android:id="@+id/reviewImage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/reviewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/purple_800"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:layout_above="@+id/reviewDescription"
            android:layout_toEndOf="@+id/reviewImage"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:gravity="center">
                <TextView
                    android:id="@+id/reviewNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:gravity="end"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/star_on"
                    app:tint="@color/purple_800"
                    />
        </LinearLayout>


        <TextView
            android:id="@+id/reviewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:layout_below="@+id/reviewImage"/>

</RelativeLayout>